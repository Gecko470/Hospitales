@using Hospitales.Clases
@model EspecialidadCLS
@{
    ViewData["Title"] = "Especialidades";
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Especialidad" asp-action="Guardar" id="frm">
            <div class="form-group">
                <label>@Html.DisplayNameFor(x => x.Nombre)</label>
                <input asp-for="Nombre" class="form form-control" />
                <span class="text-danger" asp-validation-for="Nombre"></span>
                @if (Model != null && Model.Mensaje != "")
                {
                    <p class="text-danger">@Model.Mensaje</p>
                }
            </div>

            <div class="form-group">
                <label>@Html.DisplayNameFor(x => x.Descripcion)</label>
                <input asp-for="Descripcion" class="form form-control" />
                <span class="text-danger" asp-validation-for="Descripcion"></span>
            </div>

            <div class="form-group mt-3 d-flex justify-content-between">
                <a class="btn btn-danger me-2" asp-controller="Especialidad" asp-action="Index">Volver</a>
                <input type="button" value="Crear" class="btn btn-info" onclick="abrirModal()" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>

        function abrirModal() {
            mostrarModal().then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    document.getElementById("frm").submit();
                } else if (result.isDenied) {
                    Swal.fire('Los cambios no se han guardado', '', 'info')
                }
            })
        }
    </script>
}
